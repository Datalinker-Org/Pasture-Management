{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "reference": {
      "@id": "[Reference](#Reference)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "A unique name (up to 200 characters) supplied when the location was created"
    },
    "name": {
      "@id": "[Name](#Name)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Location Name"
    },
    "geo": {
      "@id": "[Geo](#Geo)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Geographical co-ordinates of the place"
    },
    "fertilityType": {
      "@id": "[FertilityType](#FertilityType)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Dairy, Sheep and Beef - High, Sheep and Beef - Medium, Sheep and Beef - Low"
    },
    "pawType": {
      "@id": "[PawType](#PawType)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Profile Available Water - High, ModerateHigh,Average, ModeratePoor, Poor"
    },
    "shortForecast": {
      "@id": "[PGFShort](#PGFShort)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[PGFShort](PGFShort.md)",
      "dldescription": "URL to access short forecast for the location"
    },
    "longForecast": {
      "@id": "[PGFLongTerm](#PGFLongTerm)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[PGFLongTerm](PGFLongTerm.md)",
      "dldescription": "URL to access long term forecast for the location"
    },
    "locationDetails": {
      "@id": "[PGFLocation](#PGFLocation)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[PGFLocation](PGFLocation.md)",
      "dldescription": "URL to access detailed location forecast"
    }
  }
}
