{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "identifier": {
      "@id": "[Identifier](#Identifier)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Identifier for the paddock being assessed, usually recorded as the paddock number on farm."
    },
    "name": {
      "@id": "[Name](#Name)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Paddock Name"
    },
    "isIrrigated": {
      "@id": "[IsIrrigated](#IsIrrigated)",
      "@type": "xsd:boolean",
      "type": "boolean",
      "dldescription": "This value is true when the user want to add irrigation in the paddock. By default, it is false."
    },
    "pastureType": {
      "@id": "[PastureType](#PastureType)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "White clover/Ryegrass"
    },
    "shortForecast": {
      "@id": "[ShortForecast](#ShortForecast)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[PGFShort](PGFShort.md)",
      "dldescription": "URL to access short forecast for the location"
    },
    "longTermForecast": {
      "@id": "[LongTermForecast](#LongTermForecast)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[PGFLongTerm](PGFLongTerm.md)",
      "dldescription": "URL to access long term forecast for the location"
    },
    "threeMonthForecast": {
      "@id": "[ThreeMonthForecast](#ThreeMonthForecast)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[PGFThreeMonth](PGFThreeMonth.md)",
      "dldescription": "URL to access three month forecast for the location"
    },
    "dynamicPeriodForecast": {
      "@id": "[DynamicPeriodForecast](#DynamicPeriodForecast)",
      "@type": "xsd:string",
      "type": "string",
      "format": "uri",
      "dldescription": "URL to access the dynamic period forecast for the location"
    },
    "events": {
      "@id": "[Events](#Events)",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dltype": "[PGFEvent](PGFEvent.md)",
      "dldescription": "URL for list of events for the paddock"
    }
  }
}
